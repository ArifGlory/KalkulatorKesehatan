<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginBottom="65dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorBg"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:text="Kalkulator Kesehatan"
            android:textColor="@color/white_greyish"
            android:textSize="23sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/svHome"
        android:layout_width="match_parent"
        android:background="@color/colorBg"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:background="@color/colorBg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:text="Menu"
                        android:textColor="@color/black2"
                        android:textSize="18sp"
                        android:textStyle="bold" />



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="135dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/rlHeartbeat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_above="@+id/tvHB"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/heartbeat" />

                                    <TextView
                                        android:id="@+id/tvHB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="20dp"
                                        android:text="Denyut Jantung"
                                        android:textAlignment="center"
                                        android:textColor="@color/grey_800"
                                        android:textSize="14sp"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlBodyMass"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_above="@+id/tvBM"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/bodymass" />

                                    <TextView
                                        android:id="@+id/tvBM"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="20dp"
                                        android:text="Massa Tubuh"
                                        android:textAlignment="center"
                                        android:textColor="@color/grey_800"
                                        android:textSize="14sp"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlKalori"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_above="@+id/tvKL"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/calories" />

                                    <TextView
                                        android:id="@+id/tvKL"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="20dp"
                                        android:text="Kalori"
                                        android:textAlignment="center"
                                        android:textColor="@color/grey_800"
                                        android:textSize="14sp"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="135dp"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/rlWaterNeed"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_above="@+id/tvWN"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/water" />

                                    <TextView
                                        android:id="@+id/tvWN"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="20dp"
                                        android:text="Kebutuhan Air"
                                        android:textAlignment="center"
                                        android:textColor="@color/grey_800"
                                        android:textSize="14sp"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlReduceMass"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_above="@+id/tvRM"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/mass" />

                                    <TextView
                                        android:id="@+id/tvRM"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="20dp"
                                        android:text="Pengurangan Berat"
                                        android:textAlignment="center"
                                        android:textColor="@color/grey_800"
                                        android:textSize="14sp"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlChildHeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_above="@+id/tvCH"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/heightbody" />

                                    <TextView
                                        android:id="@+id/tvCH"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="20dp"
                                        android:text="Tinggi Anak"
                                        android:textAlignment="center"
                                        android:textColor="@color/grey_800"
                                        android:textSize="14sp"
                                        android:gravity="center_horizontal" />

                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>